<h1><%= @trip.title %></h1>
Our Destination: <%= @trip.destination_city %><br>
Mileage: <%= @trip.mileage %>

<h2>Current Travelers</h2>
  <section id="travelers-list">
    <% @trip.travelers.each do |traveler| %>
      <section id="traveler-<%= traveler.id %>">
        <%= traveler.name %> -
        <%= link_to "Remove Traveler", "/trips/#{@trip.id}/#{traveler.id}", method: :delete %><br>
      </section>
    <% end %>
  </section>
<h2>Other Trips to this Destination</h2>
  <section id="similar-trips">
    <% @trip.similar_destination.each do |trip| %>
      <%= link_to trip.title, trip_path(id: trip.id) %><br>
    <% end %>
  </section>
