<h1><%= @trip.title %></h1>
<%= @trip.destination_city %>
<%= @trip.mileage %>

<h2>Current Travelers</h2>
  <section id="travelers-list">
    <% @trip.travelers.each do |traveler| %>
      <section id="traveler-<%= traveler.id %>">
        <%= traveler.name %>
        <%= link_to "Remove Traveler", "/trips/#{@trip.id}/#{traveler.id}", method: :delete %>
      </section>
    <% end %>
  </section>
<h2>Other Trips to this Destination</h2>
  <section id="similar-trips">
    <% @trip.similar_destination.each do |trip| %>
      <%= link_to trip.title, "/trips/#{trip.id}" %>
    <% end %>
  </section>
